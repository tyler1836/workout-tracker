<div class="container-center-horizontal">
  <div class="screen">

    {{> navigation}}

    {{> stickman}}

    <form class="signup-form">

      <div class="grid signup">
        <div class="col-1">
          
          <label class="label">User</label>
          <input class="input" type="text" id="username-signup" placeholder="Username">

          <label class="label">Email</label>
          <input class="input" type="text" id="email-signup" placeholder="Email">

          <label class="label">Password</label>
          <input class="input" type="password" id="password-signup" placeholder="Password">

        </div>

        <div class="col-2">
          <button class="orange button signup-button" type="submit">
           Join
          </button>
        </div>
      </div>

    </form>

</div>
{{> footer}}
</div>

<script src="/javascript/signup.js"></script>

