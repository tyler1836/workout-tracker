<div class="container-center-horizontal">
  <form class="screen">

    {{> navigation}}

    <h1>Welcome to the workout tracker dashboard: <span> {{session.username}} </span></h1>

    <form class="comment-form">

      <div class="grid" id="note-taker">
        <div class="col-1">
          <h2>Saved workouts <span> (click to view)</span></h2>
          <ul class="post-list">
            //if has posts
            {{#if posts.length}}
            {{#each posts}}
            <li><a href="/api/posts/{{id}}"> {{title}}</a></li>
            {{/each}}
            {{/if}}
          </ul>

        </div>

        <div class="col-2">
          <p>
            <label class="label">Title</label>
            <input class="input" type="text" id="title" placeholder="Workout Title...">
          </p>
          <p>
            <label class="label">Post</label>
            <textarea class="comment" id="comment_text" placeholder="Workout Description..."></textarea>
          </p>
          <button class="teal button" id="save" type="submit">
            Save
          </button>
          <button class="orange button" id="update" type="submit">
            Update
          </button>
          <button class="red button" id="delete" type="submit">
            Delete
          </button>

        </div>

      </div>

    </form>


    {{> footer}}
  </form>
</div>
<script src="/javascript/add-note.js"></script>
